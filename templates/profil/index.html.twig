{% set pageId = "page-profil" %}
{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}

<div class="example-wrapper">
    <p><a href="{{ path('dashboard') }}" class="btn btn-primary">Retour au dashboard</a></p>

    <h1 class="mb-5">Mon compte</h1>

    <div class="profil row">
        <div class="row mb-5">
            <div class="photo col-5">
                HELLO PHOTO
            </div>
            <div class="informations col-7">
                <ul>
                    <li class="form-control mb-3">Nom : {{ app.user.lastname }}</li>
                    <li class="form-control mb-3">Prénom : {{ app.user.firstname }}</li>
                    <li class="form-control mb-3">E-mail : {{ app.user.email }}</li>
                    <li class="form-control mb-3">Téléphone : {{ app.user.telephone }}</li>
                    <li class="form-control mb-3">Code postal : {{ app.user.codePostal }}</li>
                    <li class="form-control mb-3">Ville : {{ app.user.ville }}</li>
                    <li class="form-control mb-3">Photo : <img src="{{  asset('public/images/' ~ app.user.photo) }}" alt=""></li>
                </ul>
            </div>
        </div>

        <div class="button-edit row justify-content-center">
            <div class="col-1">
                <a href="{{ path('edit_profil', {'id': app.user.id}) }}" class="btn btn-primary">Modifier</a>
            </div>
        </div>

    </div>
</div>
{% endblock %}
