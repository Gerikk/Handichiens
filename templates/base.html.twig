<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body id="{{ pageId is defined ? pageId : '' }}">
            <nav class="navbar navbar-expand-lg mb-5 px-2">
                <a class="navbar-brand" href="/admin">
                    <img src="{{ asset('images/logo_handichiens.png') }}" width="100" height="100" class="d-inline-block align-top" alt="">
                </a>
                <div class="collapse navbar-collapse justify-content-center" id="navbarTogglerDemo02">
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_EDUCATEUR') %}
                            <li class="nav-item active">
                                <a class="nav-link" href="/dashboard">DASHBOARD</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/chiens">LES CHIENS</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/les-familles-relais">LES FAMILLES RELAIS</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/profil">MON COMPTE</a>
                            </li>
                        {% endif %}
                        {% if is_granted('ROLE_FAMILLE') %}
                            <li class="nav-item active">
                                <a class="nav-link" href="/dashboard">DASHBOARD</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin">PLANNING</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin">HISTORIQUE</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/profil">MON COMPTE</a>
                            </li>
                        {% endif %}
                    </ul>

                </div>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a href="{{ path('app_logout') }}" class="btn mx-2 my-sm-0">DÃ©connexion</a>
                    {% endif %}
            </nav>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
