{% set pageId = "page-familles" %}
{% extends 'base.html.twig' %}

{% block title %}Handi'Chiens - Les familles relais{% endblock %}

{% block body %}
<body>
<h1>La liste des familles relais</h1>
<div class="dropdown-select">
    <h3>Disponibilit√©s:</h3>
    <div class="dropdown-select_start-date">
        <select name="startDate" id="startDate">
            <option value="#">Date</option>
            <option value="#">Date</option>
            <option value="#">Date</option>
            <option value="#">Date</option>
        </select>
    </div>
    <div class="dropdown-select_end-date">
        <select name="endDate" id="endDate">
            <option value="#">Date</option>
            <option value="#">Date</option>
            <option value="#">Date</option>
            <option value="#">Date</option>
        </select>
    </div>
    <input type="submit" value="Rechercher" class="btn btn-primary">
</div>
<div class="bloc-bottom">
    <div class="btn-ajouter">
        {% if is_granted('ROLE_ADMIN') %}
            <a href="#" class="btn btn-primary mx-2 my-sm-0">Ajouter une famille</a>
        {% endif %}
    </div>
    {% set nbFamily = 0 %}
    {% for famille in familles %}
        {% if famille.roles[0] == 'ROLE_FAMILLE' %}
            {% set nbFamily = nbFamily + 1 %}
        {% endif %}
    {% endfor %}
    <p>Nombre de familles relais : {{ nbFamily }}</p>
</div>
<div class="container">
    <div class="row">
        {% for famille in familles %}
            {% if famille.roles[0] == 'ROLE_FAMILLE' %}
                <div class="card col-3" style="width: 18rem;">
                    <img class="card-img-top" src="{{ asset('images/logo_handichiens.png') }}"  width="150" height="150" alt="">
                    <div class="card-body">
                        <h5 class="card-title">{{ famille.lastname }}</h5>
                        <p>Disponible: <br> 15/08/2021 au 20/08/2021</p>
                        <a href="#" class="btn btn-primary">Voir plus</a>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
</div>
</div>
</body>

{% endblock %}
