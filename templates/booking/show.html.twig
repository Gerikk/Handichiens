{% set pageId = "page-planning-detail" %}
{% extends 'base.html.twig' %}

{% block title %}Planning{% endblock %}

{% block body %}
    <h1>Enregistrement de "{{ booking.title }}"</h1>

    <table class="table table-hover">
        <tbody>

            <tr>
                <th>Nom</th>
                <td>{{ booking.title }}</td>
            </tr>
            <tr>
                <th>Date début</th>
                <td>{{ booking.beginAt ? booking.beginAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date fin</th>
                <td>{{ booking.endAt ? booking.endAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>

        </tbody>
    </table>

    <div>
        <a class="btn btn-primary" href="{{ path('booking_edit', {'id': booking.id}) }}">Modifier</a>
    </div>

    <div>
        <a class="btn btn-primary my-3" href="{{ path('booking_index') }}">Retour à la liste</a>
    </div>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
